#login
  - if ! locals[:message].nil?
    .alert{:class => "alert-danger"}
      %button{:type => "button", :class => "close", "data-dismiss" => "alert"}= "&times;"
      %strong= "Error!"
      = locals[:message]
  %div{'class' => 'col-centered'}
    %form{'class' => 'form-horizontal', :action => "/login", :method => "post"}
      %div{'class' => 'form-group'}
        %label{'class' => 'col-sm-2 control-label', 'for' => 'username'}= "Username"
        - if locals[:remember_me].nil?
          %input{'type' => 'text', 'class' => 'form-control', 'name' => 'username', 'id' => 'username', 'placeholder' => 'Username'}
        - else
          %input{'type' => 'text', 'class' => 'form-control', 'name' => 'username', 'id' => 'username', 'value' => locals[:remember_me]}
      %div{'class' => 'form-group'}
        %label{'class' => 'col-sm-2 control-label', 'for' => 'password'}= "Password"
        %input{'type' => 'password', 'class' => 'form-control', 'name' => 'password', 'id' => 'password', 'placeholder' => 'Password'}
      %div{'class' => 'form-group'}
        %div{'class' => 'checkbox'}
          %label
            %input{'type' => 'checkbox', 'name' => 'remember_me', 'id' => 'remember_me'}= "Remember Me"
        %button{'type' => 'submit', 'id' => 'loginBtn', 'class' => 'btn btn-primary'}= "Log in"
